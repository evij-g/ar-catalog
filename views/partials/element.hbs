<div class="card-image">
    <figure class="image is-4by3">
        <img src="{{imageUrl}}" alt="picture of={{title}}"/>
    </figure>
</div>
<div class="card-content">
    <div class="media">
        <div class="media-content">
            <p class="title is-4">{{title}}</p>
        </div>
    </div>
    <div class="content">
        <table class="table">
            <tbody>
                <tr>
                    <td>HEIGHT:</td>
                    <td>{{height}}</td>
                </tr>
                <tr>
                    <td>WIDTH:</td>
                    <td>{{width}}</td>
                </tr>
                <tr>
                    <td>MATERIAL:</td>
                    <td>{{material}}</td>
                </tr>
            </table>
        </div>
    </div>