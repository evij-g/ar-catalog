        <script src="https://raw.githack.com/AR-js-org/AR.js/master/aframe/build/aframe-ar.js"></script>
        <script src="https://raw.githack.com/AR-js-org/studio-backend/master/src/modules/marker/tools/gesture-detector.js"></script>
        <script src="https://raw.githack.com/AR-js-org/studio-backend/master/src/modules/marker/tools/gesture-handler.js"></script>
        
        

<div class="controls" style="z-index: 999; position:absolute; right: 10px; top:15px">
            <button id="button">Get camera</button>
            <select id="select">
              <option></option>
            </select>
        </div>
        <p>{{marker.patternFileLink}}</p>
        <p>{{element.imageUrl}}</p>
        <a-scene
            vr-mode-ui="enabled: false;"
            loading-screen="enabled: false;"
            arjs="trackingMethod: best; sourceType: webcam; debugUIEnabled: false;"
            id="scene"
            embedded
            gesture-detector
        >
            <a-marker
                id="animated-marker"
                type="pattern"
                preset="custom"
                url="http://res.cloudinary.com/drjenyidb/raw/upload/v1640190432/zfolwrqtmmugtvy14toq.patt"
                raycaster="objects: .clickable"
                emitevents="true"
                cursor="fuse: false; rayOrigin: mouse;"
                id="markerA"
                smooth="true"
            >
                <a-image
                    src="{{element.imageUrl}}"
                    scale="1.475 2.005 1"
                    class="clickable"
                    rotation="-90 0 0"
                    
                ></a-image>
            </a-marker>

            <a-entity camera></a-entity>
        </a-scene>
        <script src="scripts/arjs-camera-select.js"></script>
