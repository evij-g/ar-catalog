<section class="section content">
    
    <form action="/edit-image{{element._id}}" method="POST" class="upload" enctype="multipart/form-data">

        <div class="card">
            <h2 class="title has-background-primary-light">
        EDIT ELEMENT
    </h2>
            <div class="card-image">
                <figure class="image">
                  <img src="{{element.imageUrl}}" alt="">
                </figure>
            </div>

            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <div class="field">
                            <div class="file has-name is-fullwidth">
                                <label class="file-label">
                                    <!-- <input class="file-input" type="file" name="file"> -->
                                    <input name="imageUrl" type="file" class="file-input cloudinary-fileupload"/>
                                    <span class="file-cta">
                                        <span class="file-icon">
                                            <i class="fas fa-upload"></i>
                                        </span>
                                        <span class="file-label">
                                            select fileâ€¦
                                        </span>
                                    </span>
                                    <span class="file-name"></span>
                                </label>
                            </div>
                        </div>
                        <div class="control">
                                <button class="button is-primary" type="submit">update</button>
                            </div>
                        
</form>
<form action="/edit-element{{element._id}}" method="POST" enctype="multipart/form-data">
                        <div class="field">
                            <label for="title" class="label">Title:</label> 
                            <input
                                class="input"
                                type="text"
                                name="title"
                                placeholder="title"
                                id="element-title"
                                value='{{element.title}}'
                                required="required"/>
                        </div>
                        <div class="field">
                            <label for="width" class="label">Width in CM:</label> 
                            <input
                                class="input"
                                type="number"
                                name="width"
                                placeholder="real world width"
                                id="element-width"
                                value='{{element.width}}'
                                required="required"/>
                        </div>
                        <div class="field">
                            <label for="height" class="label">Height in CM:</label> 
                            <input
                                class="input"
                                type="number"
                                name="height"
                                placeholder="real world height"
                                id="element-height"
                                value='{{element.height}}'
                                required="required"/>
                        </div>
                        <div class="field">
                            <label for="position" class="label">Position (x y z)</label> 
                            <input
                                class="input"
                                type="text"
                                name="position"
                                placeholder="x y z"
                                id="element-position"
                                value='{{element.position}}'
                                required="required"/>
                        </div>
                        <div class="field">
                            <label for="rotation" class="label">Rotation (x y z)</label> 
                            <input
                                class="input"
                                type="text"
                                name="rotation"
                                placeholder="x y z"
                                id="element-rotation"
                                value='{{element.rotation}}'
                                required="required"/>
                        </div>
                        <div class="field">
                            <label for="scale" class="label">Scale (x y z)</label> 
                            <input
                                class="input"
                                type="text"
                                name="scale"
                                placeholder="x y z"
                                id="element-scale"
                                value='{{element.scale}}'
                                />
                        </div>
                        <div class="field">
                            <label for="resizefactor" class="label">ResizeFactor(1)</label> 
                            <input
                                class="input"
                                type="text"
                                name="resizefactor"
                                placeholder="1"
                                id="element-resizefactor"
                                value='{{element.resizefactor}}'
                                />
                        </div>
                        <div class="field">
                            <label for="material" class="label">Material:</label> 
                            <input
                                class="input"
                                placeholder="material"
                                type="text"
                                name="material"
                                value='{{element.material}}'
                                id="element-material"/>
                        </div>               

                            <div class="control">
                                <button class="button is-primary" type="submit">update</button>
                            </div>
                            

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>

    {{!-- {{#each allElements}}
        {{element}}
    {{/each}} --}}

</section>


